generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Creator {
  id        String   @id @default(uuid())
  username  String   @unique
  wallet    String
  bio       String?
  createdAt DateTime @default(now())
  slots     Slot[]
}

model Slot {
  id        String   @id @default(uuid())
  creator   Creator  @relation(fields: [creatorId], references: [id])
  creatorId String
  startTime DateTime
  endTime   DateTime
  price     Float
  status    String   @default("available")
}