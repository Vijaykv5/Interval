generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Creator {
  id                String   @id @default(uuid())
  username          String   @unique
  wallet            String   @unique
  profileImageUrl   String?
  bio               String?
  createdAt         DateTime @default(now())
  slots             Slot[]
  bookings          Booking[]
}

model Slot {
  id        String   @id @default(uuid())
  creator   Creator  @relation(fields: [creatorId], references: [id])
  creatorId String
  startTime DateTime
  endTime   DateTime
  price     Float
  status    String   @default("available")
  booking   Booking?
}

model Booking {
  id          String   @id @default(uuid())
  slot        Slot     @relation(fields: [slotId], references: [id])
  slotId      String   @unique
  creator     Creator  @relation(fields: [creatorId], references: [id])
  creatorId   String
  payerWallet String
  amountSol   Float
  name        String?
  email       String?
  callFor     String?
  signature   String?
  createdAt   DateTime @default(now())
}